<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Simulated blur effect with semi-transparent white -->
    <solid android:color="#80FFFFFF" /> <!-- 50% transparent white -->

    <!-- Optional inner shadow-like stroke -->
    <stroke
        android:width="1dp"
        android:color="#40FFFFFF" /> <!-- Light stroke -->

    <size
        android:width="60dp"
        android:height="60dp" />

    <!-- Soft blur-like edges -->
    <corners android:radius="30dp" />
</shape>