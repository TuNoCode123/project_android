<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- Tên công thức -->
        <EditText
            android:id="@+id/et_recipe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên công thức"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp" />

        <!-- Hình ảnh minh họa -->
        <ImageView
            android:id="@+id/img_recipe"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="Ảnh minh họa"
            android:layout_marginBottom="8dp" />

        <!-- Nút chọn ảnh -->
        <Button
            android:id="@+id/btn_pick_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh minh họa"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Nguyên liệu -->
        <EditText
            android:id="@+id/et_recipe_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nguyên liệu"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginBottom="12dp" />

        <!-- Mô tả cách làm -->
        <EditText
            android:id="@+id/et_recipe_steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả cách làm"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:layout_marginBottom="20dp" />

        <!-- Nút đăng -->
        <Button
            android:id="@+id/btn_submit_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Công Thức"
            android:layout_gravity="center_horizontal"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
