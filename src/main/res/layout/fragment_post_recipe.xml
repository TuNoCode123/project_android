<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tên công thức -->
        <EditText
            android:id="@+id/et_recipe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên công thức"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp" />

        <!-- Hình ảnh minh họa -->
        <ImageView
            android:id="@+id/img_recipe"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="Ảnh minh họa"
            android:layout_marginBottom="8dp" />

        <!-- Nút chọn ảnh -->
        <Button
            android:id="@+id/btn_pick_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh minh họa"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Tiêu đề "Mô tả công thức" -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả công thức"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Trường mô tả -->
        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả công thức"
            android:inputType="textMultiLine"
            android:layout_marginBottom="16dp"
            android:gravity="top|start" />

        <!-- Tiêu đề "Nguyên liệu" -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyên liệu"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Danh sách nguyên liệu -->
        <LinearLayout
            android:id="@+id/ingredients_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp" />

        <!-- Nút thêm nguyên liệu -->
        <Button
            android:id="@+id/btn_add_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Thêm nguyên liệu"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <!-- Tiêu đề "Các bước thực hiện" -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Các bước thực hiện"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Danh sách bước thực hiện -->
        <LinearLayout
            android:id="@+id/steps_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp" />

        <!-- Nút thêm bước -->
        <Button
            android:id="@+id/btn_add_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Thêm bước"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <!-- Nút đăng -->
        <Button
            android:id="@+id/btn_submit_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Công Thức"
            android:layout_gravity="center_horizontal"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
